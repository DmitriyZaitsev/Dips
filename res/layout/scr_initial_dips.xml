<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent">

	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="@string/how_much"
		android:id="@+id/tv_how_much"
		android:layout_centerHorizontal="true"
		android:layout_alignParentTop="true"/>

	<EditText
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:id="@+id/et_initial_dips"
		android:layout_centerHorizontal="true"
		android:layout_below="@+id/tv_how_much"
		android:phoneNumber="false"
		android:numeric="integer"
		android:layout_alignLeft="@+id/tv_how_much"
		android:layout_alignRight="@+id/tv_how_much"/>

	<Button
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="@string/ok"
		android:id="@+id/btn_ok"
		android:layout_centerHorizontal="true"
		android:layout_below="@+id/et_initial_dips"
		android:layout_alignRight="@+id/tv_how_much"
		android:layout_alignLeft="@+id/tv_how_much"/>
</RelativeLayout>